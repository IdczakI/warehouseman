<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="IdczakI.warehouseman.controller.shipper.ShipperPaneController">
    <TableView fx:id="shippersTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
               VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idTableColumn" minWidth="50.0" prefWidth="50.0" text="ID"/>
            <TableColumn fx:id="firstNameTableColumn" minWidth="100.0" prefWidth="100.0" text="First Name"/>
            <TableColumn fx:id="lastNameTableColumn" minWidth="100.0" prefWidth="100.0" text="Last Name"/>
            <TableColumn fx:id="companyTableColumn" minWidth="150.0" prefWidth="150.0" text="Company"/>
            <TableColumn fx:id="vehicleNumberTableColumn" minWidth="100.0" prefWidth="100.0" text="Vehicle Number"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <HBox VBox.vgrow="NEVER">
        <TextField fx:id="searchTextField" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
        <Button fx:id="addShipperButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Add Shipper"
                HBox.hgrow="ALWAYS"/>
        <Button fx:id="editShipperButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Edit Shipper"
                HBox.hgrow="ALWAYS"/>
        <Button fx:id="deleteShipperButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                text="Delete Shipper" HBox.hgrow="ALWAYS"/>
    </HBox>
</VBox>
